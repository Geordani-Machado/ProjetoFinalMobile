<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view3"
        android:layout_width="418dp"
        android:layout_height="69dp"
        android:background="#FFC107"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="-2dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="168dp"
        android:layout_height="67dp"
        android:fontFamily="@font/bangers"
        android:text="LOJA"
        android:textColor="#0C85E6"
        android:textSize="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.326"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="73dp"
        android:layout_height="43dp"
        android:fontFamily="@font/bangers"
        android:text="280"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="61dp"
        android:layout_height="68dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/png_transparent_arrow_computer_icons_return_angle_text_triangle_removebg_preview"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/money"
        tools:layout_editor_absoluteX="298dp"
        tools:layout_editor_absoluteY="19dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="78dp"
        android:layout_height="20dp"
        android:fontFamily="@font/bangers"
        android:text="Bala Doce"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="137dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="78dp"
        android:layout_height="20dp"
        android:fontFamily="@font/bangers"
        android:text="$ 90"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="237dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/image__5_"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="157dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comprar"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="257dp" />

    <androidx.constraintlayout.widget.Group
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="button3,textView11,textView10,imageView5" />

    <View
        android:id="@+id/view4"
        android:layout_width="113dp"
        android:layout_height="75dp"
        android:background="#2196F3"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="305dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="38dp"
        android:layout_height="60dp"
        android:fontFamily="@font/bangers"
        android:text="01"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="311dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="21dp"
        android:layout_height="62dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/bangers"
        android:text="+"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        tools:layout_editor_absoluteY="311dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="18dp"
        android:layout_height="59dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/bangers"
        android:text="-"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/textView12"
        tools:layout_editor_absoluteY="311dp" />

    <androidx.constraintlayout.widget.Group
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="textView14,view4,textView12,textView13" />

</androidx.constraintlayout.widget.ConstraintLayout>